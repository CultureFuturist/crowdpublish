<%= render 'form' %>


<div id="signup" style="position:absolute; overflow:hidden; 
left:0px; top:330px; z-index:3">

<span class="Body-C2"> Sign up to get your very own booklovers web page </span>

<%= form_for(@bookworm, :html => { :multipart => true }) do |f| %>

<table >
  <tr>
    <td >Full Name:</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label :email %>:</td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td> Password:</td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td>Password Confirmation:</td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>

<p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', bookworms_path %>
