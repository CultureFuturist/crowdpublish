<div id="name" style="position:absolute; left:170px; top:70px; width:220px">
  &nbsp&nbsp&nbsp&nbsp<%= @author.genre %><p>
  &nbsp&nbsp&nbsp&nbsp<%= @author.genre2 %><p>
  &nbsp&nbsp&nbsp&nbsp<%= @author.genre3 %>
</div>

<p id="notice"><%= notice %></p>


<div id="fanbook" style="position:absolute; overflow:hidden; left:380px; top:50px; z-index:3">
  <table CELLPADDING="0" CELLSPACING="8" WIDTH="620">
  <tr>
    <td></td>    <td></td>
    <td><span class="Body-C6"><%= @author.name %>'s Books:</span></td>
  </tr>
</table>

</div>

</body>