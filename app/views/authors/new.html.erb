<% @title="GuruTapas: Appetizers of Knowledge - Sign up as an Author!" %>

<body >

<%= render 'form' %>

<div id="signup" style="position:absolute; overflow:hidden; 
left:150px; top:330px; z-index:3">

<span class="Body-C5"> Sign up to be included on the GuruTapas Author List </span>

<%= form_for(@author, :html => { :multipart => true }) do |f| %>

<table >
  <tr>
    <td align="left">Full Name:</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td align="left"><%= f.label :email %>:</td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td align="left"> Password:</td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td align="left">Password Confirmation:</td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>

<p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', authors_path %>
</div>
</body>