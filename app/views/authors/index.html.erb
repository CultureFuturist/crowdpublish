<% @title="GuruTapas: Appetizers of Knowledge - Our Authors " %>

<%= render 'form' %>

<div id="authorlist" style="position:absolute; overflow:hidden; left:100px; top:280px; z-index:3">

<%= button_to "Sign up as an author", new_author_path, :method=> :get %><p>

<span class="Body-C6">GuruTapas Featured Authors</span>
<table CELLPADDING="0" CELLSPACING="10" WIDTH="620">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Latest Book</th>
  </tr>
<% @authors.each do |author| %>
  <tr>
    <td> 
<% if author.title != nil %>
   <% if author.title.match /http/ %>
   <a href= <%= author.id %>> <img src=<%= author.title %> width="50" height="50" title= "<%= author.name %>" ></a>
   <% else %>
   <a href= <%= author.id %>> <img src= "http://gurutapas.com/images/whiteBk.jpg" width="50" height="50" title= "<%= author.name %>"> </a> 
   <% end %>
<% else %>
   <a href= <%= author.id %>> <img src= http://gurutapas.com/images/whiteBk.jpg width="50" height="50" title= "<%= author.name %>"> </a> 
<% end %>

</td>
    <td color="#443c55" align="left">
      <%= link_to author.name, author %></td>
    <td align="left"><%= author.authorbook %></td>
  </tr>
<% end %>
</table>
</div>
