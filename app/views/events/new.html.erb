<% @title="GuruTapas: Appetizers of Knowledge - Post an event" %>

<%= render 'form' %>

<div id="calendar" style="position:absolute; left:0px; top:340px; width:900px; height:757px;" align:"left:>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    Your name......
    <%= f.text_field :personname, :size => 60 %><p>
  </div>
  <div class="field">
    Email address..
    <%= f.text_field :email, :size => 60 %><p>
  </div>
  <div class="field">
    Event title......
    <%= f.text_field :name, :size => 60 %><p>
  </div>
  <div class="field">
    Start time...
    <%= f.datetime_select :start_at, :ampm => true, :default => 3.days.from_now, :minute_step => 15 %>
  </div>
  <div class="field">
    End time.....
    <%= f.datetime_select :end_at, :ampm => true, :default => 3.days.from_now, :minute_step => 15 %>
  </div>
  <div class="field">
    Description of event<br />
    <%= f.text_area :desc, :cols => 62, :rows => 5 %><p>
  </div>
  <div class="field">
    Live streaming URL &/or in-person street address where this event will take place<br />
    <%= f.text_field :address, :size => 80 %><p>
  </div>
  <div class="field">

    URL for RSVP (Eventbrite, Meetup, etc.)<br />
    <%= f.text_field :rsvp, :size => 80, :value => "http://" %><p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
