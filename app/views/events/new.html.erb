
<%= render 'form' %>

<div id="calendar" style="position:absolute; left:0px; top:340px; width:900px; height:757px;" >

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at %>
  </div>
  <div class="field">
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at %>
  </div>
  <div class="field">
    Description of event<br />
    <%= f.text_area :desc, :cols => 62, :rows => 5 %><p>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, :size => 80 %><p>
  </div>
  <div class="field">
    URL for RSVP (Eventbrite, Meetup, etc.)<br />
    <%= f.text_field :rsvp, :size => 80 %><p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>

<%= link_to 'Back', events_path %>
